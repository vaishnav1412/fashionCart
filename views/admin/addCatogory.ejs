            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">Add New Catogory</h2>
               

                <form action="" method="post">

                  <div class="form-outline ">
                    <input type="text" name="catogory" id="form3Example3cg" class="form-control form-control-lg" required/>
                    <p id="a1" style="color: red;"></p>
                    <label class="form-label" for="form3Example3cg">Enter New Catogory</label>
                  </div>
                  <div class="form-outline ">
                    <input type="number" name="offer" id="form3Example3cg" class="form-control form-control-lg" />
                    
                    <label class="form-label" for="form3Example3cg">Enter Offers</label>
                  </div>


                  <div class="d-flex justify-content-center">
                    <button type="submit"
                      class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" id="catogory" onclick="validate()">SUBMIT</button>
                          
                  </div>

                  
                   
                  

                </form>
                <script>
                        
                       function validate(){
                        const catogory = document.getElementById('catogory').value
                        if(catogory==''){
                          document.getElementById('a1').innerText='catogory must be needed'
                        }
                       }

                </script>

              </div>

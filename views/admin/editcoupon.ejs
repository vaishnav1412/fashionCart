<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .gradient-custom-3 {
            background: #84fab0;
            background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5));
            background: linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5))
        }

        .gradient-custom-4 {
            background: #84fab0;
            background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1));
            background: linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1))
        }
    </style>
</head>

<body background="https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp">
    <section class="vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Edit Coupon</h2>
                                <form action="" method="post">
                                    <div class="form-outline ">
                                        <label class="form-label" for="form3Example1cg">Enter Coupon Code</label>
                                        <input type="text" name="code" value="<%=couponData.code%>" id="a2" class="form-control form-control-lg"
                                            required />
                                        <p id="a1" style="color: red;"></p>
                                    </div>
                                    <div class="form-outline ">
                                        <label class="form-label" for="form3Example1cg">Enter Discount Type</label>
                                        <input type="text" name="type" id="b2" value="<%=couponData.discountType%>" class="form-control form-control-lg"
                                            required />
                                        <p id="b1" style="color: red;"></p>
                                    </div>
                                    <div class="form-outline ">
                                        <label class="form-label" for="form3Example1cg">Enter Discount Amount</label>
                                        <input type="number" name="damount" value="<%=couponData.discountAmount%>" id="c2" class="form-control form-control-lg"
                                            required />
                                        <p id="c1" style="color: red;"></p>
                                    </div>
                                    <div class="form-outline ">
                                        <label class="form-label"  for="form3Example3cg">Enter Maximum Cart
                                            Amount</label>
                                        <input type="number" value="<%=couponData.maxCartAmount%>" name="camount" id="d2" class="form-control form-control-lg"
                                            required />
                                        <p id="d1" style="color: red;"></p>
                                    </div>
                                    <div class="form-outline ">
                                        <label class="form-label"  for="form3Example4cg">Enter Maximum Discount Amount</label>
                                        <input type="number" value="<%=couponData.maxDiscountAmount%>" name="mdamount" id="e2"
                                            class="form-control form-control-lg" required />
                                        <p id="e1" style="color: red;"></p>
                                    </div>
                                    <div class="form-outline ">
                                        <label class="form-label" for="form3Example4cdg">Enter Maximum User</label>
                                        <input type="number" value="<%=couponData.maxUsers%>" name="muser" id="f2"
                                            class="form-control form-control-lg" required />
                                        <p id="f1" style="color: red;"></p>
                                    </div>
                                    <div class="form-outline ">
                                        <label class="form-label" for="form3Example4cdg">Enter Status</label>
                                        <input type="text" value="<%=couponData.status%>" name="status" id="g2" class="form-control form-control-lg"
                                            required />
                                        <p id="g1" style="color: red;"></p>
                                    </div>
                                    <div class="form-outline ">
                                        <label class="form-label" for="form3Example4cdg">Enter Expiry Date</label>
                                        <input type="date" value="<%=couponData.expiryDate.toISOString().substring(0,10)%>" name="edate" id="h2" class="form-control form-control-lg"
                                            required />
                                        <p id="h1" style="color: red;"></p>
                                    </div>

                                    <input type="hidden" name="id" value="<%=couponData._id%>">

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" onclick="validate()"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body mt-3">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script>
        function validate() {
            var a = document.getElementById('a2').value;
            var b = document.getElementById('b2').value;
            var c = document.getElementById('c2').value;
            var d = document.getElementById('d2').value;
            var e = document.getElementById('e2').value;
            var f = document.getElementById('f2').value;
            var g = document.getElementById('g2').value;
            var h = document.getElementById('h2').value;

            if (a =='') {
                document.getElementById('a1').innerText ='coupon code must be required'
            }
            if (b =='') {
                document.getElementById('b1').innerText ='discount type  must be required'
            }

            if (c =='') {
                document.getElementById('c1').innerText ='discount amount must be required'
            }

            if (d =='') {
                document.getElementById('d1').innerText ='maximum cart amount must be required'
            }

            if (e =='') {
                document.getElementById('e1').innerText ='maximum discount amount must be required'
            }

            if (f =='') {
                document.getElementById('f1').innerText ='maximum users must be required'
            }

            if (g == '') {
                document.getElementById('g1').innerText ='status must be required'
            }
            if (h =='') {
                document.getElementById('h1').innerText ='expiry date must be required'
            }
        }
    </script>


</body>

</html>
  </head>
<body background="https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp">


    <section class="vh-100 bg-image">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">EDIT PRODUCTS</h2>

              <form action="" method="post" enctype="multipart/form-data" >

                <div class="form-outline ">
                    <input type="text" name="name" id="form3Example1cg" class="form-control form-control-lg" value="<%= product.name %>" required  />
                    <label class="form-label" for="form3Example1cg">Enter product name</label>
                </div>
                <!-- <div class="form-outline ">
                    <input type="text" name="catogory" id="form3Example1cg" class="form-control form-control-lg" value="<%= product.catogory %>" required/>
                    <label class="form-label" for="form3Example1cg">Enter catogory</label>
                </div> -->
                <div class="form-floating mb-3">
                  <select name="catogory"
                      class="form-select" id="floatingSelect"
                      aria-label="Floating label select example">
                      <option >Catogories</option>
                      <% if(catogoryData.length> 0) {
                          for(let i=0; i < catogoryData.length; i++) { %>
                              <option value="<%= catogoryData[i].catogory %>"
                                  >
                                  <%= catogoryData[i].catogory %>
                              </option>
                              <% } } %>
                  </select>
                  <label for="floatingSelect">Select category</label>
              </div>
                
                <div class="form-outline ">
                    <input type="number" name="quantity" id="form3Example3cg" class="form-control form-control-lg"value="<%= product.quantity %>"  required/>
                    <label class="form-label" for="form3Example3cg">Enter quantity</label>
                </div>
                
                <div class="form-outline ">
                    <input type="number" name="price" id="form3Example4cg" class="form-control form-control-lg" value="<%= product.price %>" required />
                    <label class="form-label" for="form3Example4cg">Enter price</label>
                </div>


                <div class="form-outline ">
                  <input type="number" name="offer" id="form3Example4cg" class="form-control form-control-lg" value="<%= product.offer %>"  />
                  <label class="form-label" for="form3Example4cg">Enter offer</label>
              </div>


                
                <div class="form-outline ">
                    <input type="string" name="description" id="form3Example4cdg" class="form-control form-control-lg" value="<%= product.description %>" required/>
                    <label class="form-label" for="form3Example4cdg">Enter description</label>
                </div>
                <div class="form-outline ">
                  <input type="text" name="blocked"  id="form3Example3cg" class="form-control form-control-lg"value="<%= product.blocked %>"  required/>
                  <label class="form-label" for="form3Example3cg">Enter true for block </label>
              </div>


            </label>

            <label class="block text-sm">
              <span class="text-gray-700 dark:text-gray-400">Image</span>
              <input value="<%=product.image%>" onchange="viewimage(event)" accept="image/*"
                class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                 type="file" name="image" multiple
              />
            </label>
  
            <br> 
            <br>
             <div style="display: flex;">
              <%product.image.forEach((value,index)=>{%>
            
          
                <div   style="width: 100px;height: 100px  ; border: solid 2px rgb(250, 10, 10); margin-right: 25px;" >
                
                  <img style="  width: 100px; height: 100px;" src="../admin/<%= product.image[index]%>" alt="" id="imgView">
                  <br>
                  <div>
                  
               
                    <button  type="submit" onclick="deletephoto('<%= index%>','<%= product._id%>')"
                   class="px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full dark:bg-red-700 dark:text-red-100">Remove</button>
               
               </div>
                </div>
             
                <%})%>
                </div>

              


              <input type="hidden" name="id" value="<%=product._id%>">
                
                <br>
                <br>
                <br>
                
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" value="update product">Update</button>
                </div>
                
                

                

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

<script>
  function deletephoto(position,id){
    console.log('hiiii');

    $.ajax({

        url:"/admin/delete_images",
        method:"post",
        encoded:true,
        data:{
          position:position,
          id:id,
        },
    })
    
  }
</script>
          
<script>
  function viewimage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>


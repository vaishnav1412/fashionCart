<%- include('../admin/layoute/header.ejs')%>

    
                             <h6 class="mb-4">PRODUCT DETAILS</h6>
    <div class="table-responsive" >
        <table class="table" style="border: 3px; ">
        
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Order Id</th>
                    <th scope="col">Date</th>
                    <th scope="col">Address</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action </th>
                    <th scope="col">View Product</th>
                    

                </tr>

            </thead>
            <tbody>
                
                <% if(orderData.length>0){
                    for(let i=0;i<orderData.length;i++){ %>
                <tr>
                    <td><%=i+1%></td>
                    <td><%=orderData[orderData.length-i-1]._id%></td>
                    <td><%=orderData[orderData.length-i-1].date.toISOString().substring(0,10)%></td>
                    <td> <%=orderData[orderData.length-i-1].deliveryAddress%></td>
                    <td><p><%=orderData[orderData.length-i-1].totalAmount%></td>
                    <td><p><%=orderData[orderData.length-i-1].paymentMethod%></td>
                    <td><p><%=orderData[orderData.length-i-1].status%></td>
                    <td> <a style="padding: 15px;font-size: 12px;font-family: Georgia, 'Times New Roman', Times, serif;" onclick="checker()" href="/admin/delivery?id=<%=orderData[orderData.length-i-1]._id%>">Deliverd</a>
                    </td>
                    <td><a style="padding: 15px;font-size: 12px;font-family: Georgia, 'Times New Roman', Times, serif;" href="/admin/viewProduct?id=<%=orderData[orderData.length-i-1]._id%>">View</a>
                    </td>
                
                </tr>
                <% } } else{ %>
                    <tr colspan="5">user not found</tr>
                    <% } %>

           
                

            </tbody>
        </table>
        <script>
			function checker(){
				var result = confirm('Are you sure..?')
				if (result==false) {
					event.preventDefault()
				}
			}
		</script>
    </div>
    </div>
    </div>
    </div>
    </div>
    <!-- Table End -->

    <%- include('../admin/layoute/footer.ejs')%>
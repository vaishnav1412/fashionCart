<body background="https://img.freepik.com/premium-photo/side-view-smiley-woman-holding-up-shopping-bags_23-2148684506.jpg">


  <section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 ">
      <div class="container h-100">
        <div class="row d-flex  align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px; background-color:aquamarine;">
              <div class="card-body p-5">
                <div> <img src="../images/original-removebg-preview.png" width="20%" height="20%" alt=""></div>
                <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                <form action="" method="post">

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example1cg">Your Name</label>
                    <input type="text" name="name" id="a2" class="form-control " required />
                    <p id="a1" style="color: red;"></p>
                  </div>
                  <div class="form-outline ">
                    <label class="form-label" for="form3Example1cg">Your Age</label>
                    <input type="number" name="age" id="b2" class="form-control " required />
                    <p id="b1" style="color: red;"></p>
                  </div>
                  <div class="form-outline ">
                    <label class="form-label" for="form3Example1cg">Your Mobile</label>
                    <input type="number" name="mobile" id="c2" class="form-control " required />
                    <p id="c1" style="color: red;"></p>
                  </div>

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example3cg">Your Email</label>
                    <input type="email" i name="email" id="d2" class="form-control " required />
                    <p id="d1" style="color: red;"></p>
                  </div>

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example4cg">Password</label>
                    <input type="password" name="password" id="e2" class="form-control " required />
                    <p id="e1" style="color: red;"></p>
                  </div>

                 

                  <div class="d-flex justify-content-center">
                    <button type="submit" onclick="validate()"
                      class="btn btn-success btn-block btn-lg gradient-custom-4 text-body mt-3">Register</button>
                  </div>

                  <% if(typeof message !=='undefined' ){ %>
                    <p style="color: green;">
                      <%= message %>
                    </p>
                    <% } %>

                      <p class="text-center text-muted mt-3 mb-0">Have already an account? <a href="/login"
                          class="fw-bold text-body">Login here</a></p>

                </form>

                <script>
                  function validate() {
                    var name = document.getElementById('a2').value;
                    var age = document.getElementById('b2').value;
                    var mobile = document.getElementById('c2').value;
                    var email = document.getElementById('d2').value;
                    var password = document.getElementById('e2').value;
                    
                    if (name == '') {
                      document.getElementById('a1').innerText = 'name must be required'
                    }
                    if (age == '') {
                      document.getElementById('b1').innerText = 'age must be required'
                    }

                    if (mobile == '') {
                      document.getElementById('c1').innerText = 'mobile must be required'
                    }

                    if (email == '') {
                      document.getElementById('d1').innerText = 'email must be required'
                    }

                    if (password == '') {
                      document.getElementById('e1').innerText = 'password must be required'
                    }

                  
                  }
                </script>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


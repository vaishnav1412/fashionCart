<body background="https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp">


  <section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">Edit Address</h2>


                 <form action="" method="post">

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example1cg">Your Name</label>
                    <input type="text" name="userName" value="<%=value.userName%>" id="a2" class="form-control form-control-lg" required />
                    <p id="a1" style="color: red;"></p>
                  </div>
                  <div class="form-outline ">
                    <label class="form-label" for="form3Example1cg">Enter Mobile No</label>
                    <input type="number" name="mobile" id="b2" value="<%=value.mobile%>" class="form-control form-control-lg" required />
                    <p id="b1" style="color: red;"></p>
                  </div>
                  <div class="form-outline ">
                    <label class="form-label" for="form3Example1cg"> Mobile No 2</label>
                    <input type="number" name="alterMobile" id="c2"value="<%=value.alternativeMob%>"  class="form-control form-control-lg" required />
                    <p id="c1" style="color: red;"></p>
                  </div>

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example3cg">Your Address</label>
                    <textarea class="form-control form-control-lg"  name="address" id="d2"  cols="20" rows="3" required><%=value.address%></textarea>
                    <p id="d1" style="color: red;"></p>
                  </div>

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example4cg">Your City</label>
                    <input type="text" name="city" id="e2" value="<%=value.city%>" class="form-control form-control-lg" required />
                    <p id="e1" style="color: red;"></p>
                  </div>

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example4cdg">Your State</label>
                    <input type="text" name="state" id="f2" value="<%=value.state%>" class="form-control form-control-lg" required />
                    <p id="f1" style="color: red;"></p>
                  </div>

                  <div class="form-outline ">
                    <label class="form-label" for="form3Example4cg">Pincode</label>
                    <input type="number" name="pincode" id="g2" value="<%=value.pincode%>" class="form-control form-control-lg" required />
                    <p id="g1" style="color: red;"></p>
                  </div>

                  <div class="form-outline ">
                    <label class="form-label"  for="form3Example4cdg"> Your Landmark</label>
                    <input type="text" name="landmark" id="h2" value="<%=value.landmark%>" class="form-control form-control-lg" required />
                    <p id="h1" style="color: red;"></p>
                  </div>
                  <input type="hidden" name="index" value="<%=index%>" >



                  <div class="d-flex justify-content-center">
                    <button type="submit" value="Register" onclick="validate()"
                      class="btn btn-success btn-block btn-lg gradient-custom-4 text-body mt-3">SAVE</button>
                  </div>

                  <% if(typeof message !=='undefined' ){ %>
                    <p style="color: green;">
                      <%= message %>
                    </p>
                    <% } %>

                      
                </form>
                <script>
                  function validate(){
                    name      = document.getElementById('a2').value
                    phone1    = document.getElementById('b2').value
                    phone2    = document.getElementById('c2').value
                    address   = document.getElementById('d2').value
                    city      = document.getElementById('e2').value
                    landmark  = document.getElementById('h2').value
                    state     = document.getElementById('f2').value
                    pin       = document.getElementById('g2').value
                    landmark  = document.getElementById('h2').value


                    if(name==''){
                      document.getElementById('a1').innerText='Name must be required'
                    }
                    if(phone1==''){
                      document.getElementById('b1').innerText='Phone must be required'
                    }
                    if(phone2==''){
                      document.getElementById('c1').innerText='Phone must be required'
                    }
                    if(address==''){
                      document.getElementById('d1').innerText='Address must be required'
                    }
                    if(city==''){
                      document.getElementById('e1').innerText='City must be required'
                    }
                  
                    if(state==''){
                      document.getElementById('f1').innerText='State must be required'
                    }
                    if(pin==''){
                      document.getElementById('g1').innerText='Pin must be required'
                    }
                    if(landmark==''){
                      document.getElementById('h1').innerText='Landmark must be required'
                    }
                  }
                </script>

               
                    
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


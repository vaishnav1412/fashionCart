	<script>
		function changeQuantity(userId, proId, count) {
			$.ajax({
				url: '/changeProductQuantity',
				data: {
					user: userId,
					product: proId,
					count: count
				},
				method: 'post',
				success: (response) => {
				}
			}).done((data) => {
				if (data.success) {
					window.location.reload();
				} else if (data.check) {
					Swal.fire({
						icon: 'error',
						title: 'Oops...',
						text: 'Out Of Stock!'
					})
				}
			})
		}
	</script>
